{
  "name": "dev-env-model",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Yoichiro Hirano",
  "license": "MIT",
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "usage"
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-transform-async-to-generator",
      [
        "@babel/plugin-transform-runtime",
        {
          "regenerator": true
        }
      ]
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "jquery": true,
      "jest": true
    },
    "extends": [
      "airbnb-base"
    ],
    "parserOptions": {
      "parser": "babel-eslint",
      "sourceType": "module"
    },
    "globals": {
      "velocity": true,
      "_": true,
      "axios": true,
      "YT": true,
      "anime": true
    },
    "rules": {
      "no-console": 0,
      "no-alert": 0,
      "no-debugger": 1
    }
  },
  "browserslist": [
    "last 2 versions",
    "ie >= 11",
    "Android >= 4.4",
    "safari >= 9"
  ],
  "scripts": {
    "dev": "npm-run-all -p build:pug 'develop:*' 'watch:*'",
    "build": "npm-run-all -p 'build:*'",
    "develop:js": "NODE_ENV=development webpack --watch --mode development --display-error-details --progress --colors",
    "build:js": "NODE_ENV=production webpack --mode production --display-error-details --progress --colors",
    "build:pug": "pug ./src/pug/pages/*.pug --pretty -o ./dist",
    "watch:pug": "chokidar './src/pug/**/*.pug' --command 'npm run build:pug'",
    "json-server": "json-server --watch db.json",
    "test": "jest --watch",
    "lint": "eslint ./src/js/**/*.js"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/plugin-transform-async-to-generator": "^7.4.4",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "autoprefixer": "^9.6.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "chokidar-cli": "^1.2.1",
    "cpx": "^1.5.0",
    "css-loader": "^3.0.0",
    "cssnano": "^4.1.10",
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.3",
    "mini-css-extract-plugin": "^0.7.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.3",
    "postcss-loader": "^3.0.0",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "pug-plain-loader": "^1.0.0",
    "regenerator-runtime": "^0.13.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "uglifyjs-webpack-plugin": "^2.1.3",
    "url-loader": "^2.0.0",
    "webpack": "^4.34.0",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-cli": "^3.3.4"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "@babel/runtime": "^7.4.5",
    "intersection-observer": "^0.7.0",
    "jest": "^24.8.0"
  }
}
